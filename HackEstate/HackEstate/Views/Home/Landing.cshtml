@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/MainLayout/css/landing.css" />
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>Welcome to <span class="logo-event">Even</span><span class="logo-tahan" style="-webkit-text-stroke: 0.5px white !important;">Tahan</span></h1>
            <p class="tagline">Built on Trust. Powered by AI</p>
            <div class="hero-buttons">
                <a href="/Account/Login" class="btn btn-cta btn-signin">Log In</a>
                <a href="/Account/Register" class="btn btn-cta btn-signup">Sign Up</a>
            </div>
        </div>
    </section>

    <!-- Description Section -->
    <section class="description-section">
        <div class="container">
            <h2>Discover Events & Properties Like Never Before</h2>
            <p>
                EventTahan is your trusted platform for finding events and real estate opportunities. Powered by AI, we curate personalized recommendations for events and properties, ensuring you never miss out on experiences or investments that matter. From concerts to commercial spaces, we connect you with the best—securely and seamlessly.
            </p>
        </div>
    </section>

    <!-- About Section -->
    <section class="about-section">
        <div class="container">
            <h2>About EventTahan</h2>
            <p>
                At EventTahan, we’re redefining how you explore events and real estate. Our mission is to connect people with unforgettable experiences and valuable properties, leveraging cutting-edge AI technology to deliver tailored recommendations. Built on a foundation of trust, we prioritize your privacy and security while offering a seamless platform for discovery.
            </p>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
        <div class="container">
            <h2>Contact Us</h2>
            <p>
                Have questions or need assistance? Reach out to us—we’d love to hear from you!
            </p>
            <div class="contact-form">
                <input type="text" class="form-control" placeholder="Your Name">
                <input type="email" class="form-control" placeholder="Your Email">
                <textarea class="form-control" rows="4" placeholder="Your Message"></textarea>
                <button type="button" class="btn btn-submit">Send Message</button>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div>
                <a href="https://facebook.com"><i class="fab fa-facebook-f"></i></a>
                <a href="https://twitter.com"><i class="fab fa-twitter"></i></a>
                <a href="https://instagram.com"><i class="fab fa-instagram"></i></a>
            </div>
            <p>© 2025 EventTahan. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>