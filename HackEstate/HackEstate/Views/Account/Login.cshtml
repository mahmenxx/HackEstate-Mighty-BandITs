@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div class="login-container">
    <div class="login-box">
        <img src="/Logo.png" alt="EvenTahan Logo" class="login-logo img-fluid" />
        <div class="login-title">Login</div>
        <form method="post" action="/Account/Login">
            <div class="mb-3 text-start">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required />
            </div>
            <div class="mb-3 text-start">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required />
            </div>
            <div class="mb-3 d-flex justify-content-between align-items-center">
                <div class="form-check m-0">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <a href="/Account/ForgotPassword" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal" class="text-muted small">Forgot password?</a>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <p class="mt-3 text-center small">
                    Don't have an Account? <a href="/Account/Register" class="text-decoration-none" style="color: #38a47a;">Sign up</a>
                </p>


        </form>
    </div>
</div>
<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="forgotPasswordForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Forgot Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Step 1: Email input -->
                    <div id="step1">
                        <div class="mb-3">
                            <label for="forgotEmail" class="form-label">Enter your email</label>
                            <input type="email" class="form-control" id="forgotEmail" name="ForgotEmail" required />
                        </div>
                    </div>

                    <!-- Step 2: OTP input, initially hidden -->
                    <div id="step2" class="d-none">
                        <div class="mb-3">
                            <label for="otpCode" class="form-label">Enter OTP code</label>
                            <input type="text" class="form-control" id="otpCode" name="OTPCode" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="nextStepBtn" class="btn btn-primary w-100">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- jQuery (must be first) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Toastr -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

<script>
    var successMessage = '@TempData["success"]';
    var errorMessage = '@TempData["error"]';

    if (successMessage && successMessage !== '') {
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };
        toastr.success(successMessage);
    }


    if (errorMessage && errorMessage !== '') {
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };
        toastr.error(errorMessage);
    }
</script>
