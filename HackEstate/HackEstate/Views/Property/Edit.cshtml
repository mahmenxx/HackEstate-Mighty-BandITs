@model Property

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Edit Property";
}

<br />
<br />
<br />
<br />

<div class="container mt-5 mb-5">
    <h2 class="mb-4 text-center text-success">Edit Property</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-white">
        <input type="hidden" asp-for="Id" name="id" />

        <div class="mb-3">
            <label class="form-label fw-bold">Title</label>
            <input class="form-control" name="title" value="@Model.Title" placeholder="Enter property title" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Location</label>
            <input class="form-control" name="location" value="@Model.Location" placeholder="Enter property location" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Price (₱)</label>
            <input class="form-control" name="price" type="number" step="0.01" value="@Model.Price" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Lot Size (sq.m)</label>
            <input class="form-control" name="lotSize" type="number" value="@Model.LotSize" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Bedrooms</label>
            <input class="form-control" name="bedroomQty" type="number" value="@Model.BedroomQty" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Bathrooms</label>
            <input class="form-control" name="bathroomQty" type="number" value="@Model.BathroomQty" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Property Type</label>
            <input class="form-control" name="propertyType" type="text" value="@Model.PropertyType" />

        </div>

        @* <div class="mb-3">
        <label class="form-label fw-bold">Status</label>
        <select name="status" class="form-select">
        <option value="">-- Select Status --</option>
        <option value="Available" selected="@("Available" == Model.Status)">Available</option>
        <option value="Sold" selected="@("Sold" == Model.Status)">Sold</option>
        <option value="Pending" selected="@("Pending" == Model.Status)">Pending</option>
        </select>
        </div>
        *@
        <div class="mb-3">
            <label class="form-label fw-bold">Amenities</label>
            <input class="form-control" name="amenities" value="@Model.Amenities" placeholder="Pool, Garage, Garden..." />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Description</label>
            <textarea name="description" class="form-control" rows="4" placeholder="Write something about the property...">@Model.Description</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Upload Images</label>
            <input type="file" name="images" class="form-control" multiple />
            <div class="form-text">You can select multiple images (JPG, PNG).</div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Current Images</label>
            <div class="d-flex flex-wrap gap-2">
                @foreach (var image in Model.PropertyImages)
                {
                    <img src="~/uploads/properties/@image.ImageUrl" alt="Property Image" width="120" height="80" class="rounded border" />
                }
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="View" class="btn btn-outline-secondary">Cancel</a>
            <button type="submit" class="btn btn-success px-4">Update</button>
        </div>
    </form>
</div>
